<UserControl x:Class="HaCreator.GUI.EditorPanels.AIMapEditPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <UserControl.Resources>
        <!-- Button Styles -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#5A95F5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SuccessButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#34A853"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#45B864"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#CCCCCC"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SectionLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>

        <Style x:Key="SubLabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Foreground" Value="#646464"/>
            <Setter Property="Margin" Value="0,0,0,3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button x:Name="btnRefresh" Content="Refresh"
                    Style="{StaticResource ToolbarButtonStyle}"
                    Click="BtnRefresh_Click"
                    ToolTip="Refresh map context after making changes"/>
            <Button x:Name="btnSettings" Content="Settings"
                    Style="{StaticResource ToolbarButtonStyle}"
                    Click="BtnSettings_Click"
                    ToolTip="Configure OpenRouter API key and model"/>
            <Button x:Name="btnClearLog" Content="Clear Log"
                    Style="{StaticResource ToolbarButtonStyle}"
                    Click="BtnClearLog_Click"
                    ToolTip="Clear the execution log"/>
        </StackPanel>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="5,0,5,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" MinHeight="50"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="2*" MinHeight="100"/>
                <RowDefinition Height="5"/>
                <RowDefinition Height="*" MinHeight="50"/>
            </Grid.RowDefinitions>

            <!-- Map Context Section -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Map Context (auto-loaded):"
                           Style="{StaticResource SubLabelStyle}"/>
                <TextBox x:Name="txtMapContext" Grid.Row="1"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="NoWrap"
                         HorizontalScrollBarVisibility="Auto"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="#FAFAFA"/>
            </Grid>

            <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeNS"/>

            <!-- Workflow Section (Instructions + Commands) -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*" MinWidth="100"/>
                </Grid.ColumnDefinitions>

                <!-- Instructions Panel -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="1. Enter Instructions:"
                               Style="{StaticResource SectionLabelStyle}"/>
                    <TextBox x:Name="txtInstructions" Grid.Row="1"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Segoe UI"
                             FontSize="12"
                             Text="Add a maze like platform in the middle of the map, any tile you like."/>
                    <Button x:Name="btnProcessAI" Grid.Row="2"
                            Content="Process with AI"
                            Style="{StaticResource PrimaryButtonStyle}"
                            Margin="0,5,0,0"
                            Click="BtnProcessAI_Click"
                            ToolTip="Send instructions to AI and generate commands"/>
                </Grid>

                <GridSplitter Grid.Column="1" Width="5" HorizontalAlignment="Center"
                              VerticalAlignment="Stretch" Background="Transparent" Cursor="SizeWE"/>

                <!-- Commands Panel -->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="2. Review &amp; Execute:"
                               Style="{StaticResource SectionLabelStyle}"/>
                    <TextBox x:Name="txtCommands" Grid.Row="1"
                             AcceptsReturn="True"
                             TextWrapping="NoWrap"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto"
                             FontFamily="Consolas"
                             FontSize="11"
                             Text="# Commands will appear here after processing"/>
                    <Button x:Name="btnExecute" Grid.Row="2"
                            Content="Execute Commands"
                            Style="{StaticResource SuccessButtonStyle}"
                            Margin="0,5,0,0"
                            Click="BtnExecute_Click"
                            ToolTip="Apply the commands to the map"/>
                </Grid>
            </Grid>

            <GridSplitter Grid.Row="3" Height="5" HorizontalAlignment="Stretch"
                          Background="Transparent" Cursor="SizeNS"/>

            <!-- Execution Log Section -->
            <Grid Grid.Row="4">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Log:"
                           Style="{StaticResource SubLabelStyle}"/>
                <TextBox x:Name="txtLog" Grid.Row="1"
                         IsReadOnly="True"
                         AcceptsReturn="True"
                         TextWrapping="Wrap"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="#F8F8F8"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
